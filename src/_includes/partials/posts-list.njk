
<div class="container">
{%- for post in posts | reverse -%}
  <div class="row">
  <div class="col-sm-2 offset-md-1">
  {% if locale == 'fr' %}
    {{ post.data.date | frDate }}
  {% else %}
    {{ post.data.date | engDate }}
  {% endif %}



  </div>
  <div class="col-sm-8">
  <a href="/{{ locale }}/{{post.data.domain}}/{{ post.data.title | slug }}/" class="no-line">
    <h4>{{ post.data.title }}</h4>
<p>{{ post.data.description }}</p>
</a>
  </div>
  </div>
    <br/>
{%- endfor -%}
</div>
