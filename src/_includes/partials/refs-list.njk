<div class="row justify-content-md-center">
  <div class="col-md-10">
    <h1 class="text-center" style="color: #3F51B5">{{ refs.title }}</h1>
        <br />
  </div>
</div>


<!-- Three columns of text below the carousel -->



<div class="container">
  <div class="row align-items-center justify-content-center">

    {% for item in refs.refs %}
    <div class=" col-sm-3" style=" width: 18rem; ">
      {% if item.img %}
      <a href="{{ item.link }}" rel="noopener noreferrer" target="_blank">
        <img style="height: 7rem; margin-left: auto; margin-right: auto;" src="{{ item.img }}" alt="{{ item.name }}">
      </a>
      {% endif %}
    </div>
    {% endfor %}

    </div>

  </div>
</div>
