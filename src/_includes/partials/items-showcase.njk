
{% if item.title %}
<div class="row justify-content-md-center">

  <div class="col-md-10">
    <h2 class="section-title">{{ item.title }}</h2>
  </div>
  <div class="col-md-10">
    <p class="lead-text">{{ item.subtitle }}</p>
  </div>
</div>
<hr />
{% endif %}

<!-- Three columns of text below the carousel -->
<div class="row align-items-center">
    {% for column in item.columns %}
    <div class="col-lg-4">
      <span style="color: #191a23;">
        <i class="fa fa-{{ column.icon }} fa-5x"></i>
      </span>

      <h3>{{ column.title }}</h3>

      <p>{{ column.subtitle }}</p>

      <a class="btn btn-altertek" href="{{ column.link }}" role="button">{{ column.button }}</a>
    </div>
    {% endfor %}

</div><!-- /.row -->
