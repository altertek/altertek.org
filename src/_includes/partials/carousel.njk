<div id="myCarousel" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    {% for item in items %}
    <li data-target="#myCarousel" data-slide-to="{{ loop.index0 }}" class="{{ "active" if loop.index0==0 else "" }}"></li>
    {% endfor %}
  </ol>

  <div class="carousel-inner">
    {% for item in items %}
    <div class="carousel-item {{ "active" if loop.index0==0 else "" }}">
      <img src="{{ item.img }}" height="200" class="d-inline-block align-top" alt="" loading="lazy">
      <div class="container">
        <div class="carousel-caption text-left">
          <h1><span class="expose-title">{{ item.title }}</span></h1>
          <p><span class="expose-title">{{ item.subtitle }}</span></p>
          <p><a class="btn btn-lg btn-lg btn-altertek" href="#" role="button">{{ item.button }}</a></p>
        </div>
      </div>
    </div>
    {% endfor %}
  </div>

  <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
